<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_corner_top_left_right"
    android:orientation="vertical">

    <androidx.appcompat.widget.RecyclerView
        android:id="@+id/base_bottom_dialog_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></androidx.appcompat.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_light"></View>

    <TextView
        android:id="@+id/base_bottom_dialog_cancel_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="取消"
        android:textSize="16dp" />
</LinearLayout>