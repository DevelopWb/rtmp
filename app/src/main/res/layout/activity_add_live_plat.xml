<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.easydarwin.easypusher.mine.AddLivePlatActivity">


    <TextView
        android:id="@+id/first_live_key"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:drawableRight="@mipmap/arrow_down_icon"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:inputType="number"
        android:text="哔哩"
        app:layout_constraintRight_toRightOf="@+id/regist_code_key"
        app:layout_constraintTop_toBottomOf="@+id/regist_code_key" />

    <ImageView
        android:id="@+id/first_live_scan_iv"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/scan_icon"
        app:layout_constraintRight_toRightOf="@+id/first_live_key"
        app:layout_constraintTop_toBottomOf="@+id/first_live_key"></ImageView>

    <EditText
        android:id="@+id/first_live_value_et"
        style="@style/set_url_editText"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toRightOf="@+id/first_live_key"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/first_live_key" />


</android.support.constraint.ConstraintLayout>
