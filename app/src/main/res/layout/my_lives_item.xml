<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_height="30dp">

    <TextView
        android:id="@+id/live_item_name_tv"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="@drawable/sp_squre_gray"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:paddingTop="5dp"
        android:minWidth="60dp"
        android:maxWidth="80dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:text="直播直播"
        app:layout_constraintEnd_toStartOf="@+id/select_status_iv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <ImageView
        android:id="@+id/select_status_iv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@mipmap/right_duihao_icon"
        app:layout_constraintBottom_toBottomOf="@+id/live_item_name_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/live_item_name_tv"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

</android.support.constraint.ConstraintLayout>