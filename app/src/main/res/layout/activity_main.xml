<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="org.easydarwin.easypusher.push.StreamActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextureView
            android:id="@+id/sv_surfaceview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:keepScreenOn="true" />
    </RelativeLayout>

    <android.support.constraint.Group
        android:id="@+id/float_views_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="float_views_rl,option_bar_container"></android.support.constraint.Group>

    <RelativeLayout
        android:id="@+id/float_views_rl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/option_bar_container"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/stream_stat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/res_container"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:textColor="#fff" />

        <LinearLayout
            android:id="@+id/res_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/select_camera_tv"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="end|center_vertical"
                android:padding="10dp"
                android:text="摄像头："
                android:textColor="@android:color/white" />


            <Spinner
                android:id="@+id/spn_resolution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/txt_res"
                android:layout_toRightOf="@+id/txt_res"
                android:background="#00ffffff" />

            <TextView
                android:id="@+id/tv_start_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/recording_marker_shape"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="00:00"
                android:textColor="#FF0000"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txt_res"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickResolution"
                android:padding="8dp"
                android:text="分辨率："
                android:textColor="#ffffff" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/res_container"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/switch_oritation_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_action_switch_oritation" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">


            <ImageView
                android:id="@+id/push_stream_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/push_stream_off"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/first_live_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="50dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/bilibili_off" />

            <ImageView
                android:id="@+id/secend_live_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/huya_off" />

            <ImageView
                android:id="@+id/third_live_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/yi_live_off" />

            <ImageView
                android:id="@+id/fourth_live_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/now_live_off" />

            <ImageView
                android:id="@+id/video_record_full_screen_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/video_record_normal" />

        </LinearLayout>


        <TextView
            android:id="@+id/txt_stream_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="5dp"
            android:textColor="#ff0000" />

        <TextView
            android:id="@+id/push_screen_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_stream_address"
            android:padding="5dp"
            android:textColor="#ff0000" />

        <TextView
            android:id="@+id/txt_stream_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/push_screen_url"
            android:padding="5dp"
            android:textColor="#ff0000" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/option_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#88ffffff"
        android:orientation="horizontal"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/push_stream_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/streaming_activity_push"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/start_push" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="视频"
                android:textColor="#fff" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/record_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/streaming_activity_record"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:clickable="false"
                android:focusable="false"
                android:src="@drawable/record" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="录像"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/set_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/settings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="设置"
                android:textColor="#fff" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>