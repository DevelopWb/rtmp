<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorTheme</item><!--Appbar背景色-->
        <item name="colorPrimaryDark">@color/colorTheme</item><!--状态栏颜色-->
        <item name="colorAccent">@color/colorTheme</item><!--控制各个控件被选中时的颜色-->
        <item name="toolbarStyle">@style/toolbar</item>
    </style>

    <style name="toolbar" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorTheme</item>
    </style>

    <style name="set_url_editText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/setting_url_shape</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:minHeight">70dp</item>
        <item name="android:lines">3</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">#4c4c4c</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="bt_style">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
